@model TestProject.ViewModels.DetailViewModel

@{
    ViewData["Title"] = "Book Details";
}

<h1>Book Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Isbn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Isbn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Summary)
        </dd>
    </dl>
</div>

<h4>Author List</h4>

<p>
    <a asp-action="AddAuthor">Add author</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.FiscalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Nation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Authors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FiscalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nation)
                </td>
                <td>   
                    @if (Model.Authors.ToList().Count > 1) { 
                    <a asp-action="Remove" asp-route-id="@item.AuthorID">Remove</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back</a>
</div>
