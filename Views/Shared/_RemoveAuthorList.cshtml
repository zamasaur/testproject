@model TestProject.ViewModels.ViewModel

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.FiscalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Nation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Authors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FiscalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nation)
                </td>
                <td>
                    <form asp-action="RemoveAuthor" asp-route-id="@Model.Book.BookID" data-ajax="true" data-ajax-update="#RemoveAuthorList" style="display: inline;">
                        <input type="hidden" asp-for="@item.AuthorID" name="authorId" />
                        <!-- Modal trigger -->
                        @if (Model.Authors.Count > 1)
                        {
                            <button type="button" class="btn btn-sm btn-warning d-none d-md-inline-block" data-toggle="modal" data-target="#confirmationModal">
                                Remove
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-sm btn-warning d-none d-md-inline-block" data-toggle="modal" data-target="#confirmationModal" disabled>
                                Remove
                            </button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
